<?xml version="1.0" encoding="UTF-8"?>
<project name="spring-helloworld-demo" default="all">
  
  
  <property file="spring-helloworld-demo.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.idea/**"/>
    <exclude name="**/*.iml/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.zip"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.spring-4.3.18.release.classpath">
    <pathelement location="${basedir}/lib/aopalliance-1.0.jar"/>
    <pathelement location="${basedir}/lib/commons-logging-1.2.jar"/>
    <pathelement location="${basedir}/lib/spring-aop-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-aspects-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-beans-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-context-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-context-support-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-core-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-expression-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-instrument-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-instrument-tomcat-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-jdbc-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-jms-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-messaging-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-orm-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-oxm-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-test-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-tx-4.3.18.RELEASE.jar"/>
  </path>
  
  <path id="library.spring_mvc-4.3.18.release.classpath">
    <pathelement location="${basedir}/lib/spring-web-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-webmvc-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-webmvc-portlet-4.3.18.RELEASE.jar"/>
    <pathelement location="${basedir}/lib/spring-websocket-4.3.18.RELEASE.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_spring-helloworld-demo.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.spring-helloworld-demo, clean.artifact.spring-helloworld-demo:war_exploded" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.spring-helloworld-demo" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.spring-helloworld-demo:war_exploded" value="${basedir}/out/artifacts/spring_HelloWorld_Demo_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="clean.artifact.spring-helloworld-demo:war_exploded" description="clean spring-HelloWorld-Demo:war exploded artifact output">
    <delete dir="${artifact.output.spring-helloworld-demo:war_exploded}"/>
  </target>
  
  <target name="artifact.spring-helloworld-demo:war_exploded" depends="init.artifacts, compile.module.spring-helloworld-demo" description="Build &#39;spring-HelloWorld-Demo:war exploded&#39; artifact">
    <mkdir dir="${artifact.output.spring-helloworld-demo:war_exploded}"/>
    <copy todir="${artifact.output.spring-helloworld-demo:war_exploded}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/web.xml"/>
    <mkdir dir="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/classes">
      <fileset dir="${spring-helloworld-demo.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib"/>
    <copy file="${basedir}/lib/spring-instrument-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-instrument-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-instrument-tomcat-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-instrument-tomcat-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-aspects-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-aspects-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-context-support-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-context-support-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-expression-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-expression-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-jms-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-jms-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-jdbc-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-jdbc-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-aop-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-aop-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-oxm-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-oxm-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/commons-logging-1.2.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/commons-logging-1.2.jar"/>
    <copy file="${basedir}/lib/aopalliance-1.0.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/aopalliance-1.0.jar"/>
    <copy file="${basedir}/lib/spring-messaging-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-messaging-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-tx-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-tx-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-orm-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-orm-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-test-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-test-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-context-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-context-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-beans-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-beans-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-core-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-core-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-web-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-web-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-websocket-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-websocket-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-webmvc-portlet-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-webmvc-portlet-4.3.18.RELEASE.jar"/>
    <copy file="${basedir}/lib/spring-webmvc-4.3.18.RELEASE.jar" tofile="${artifact.output.spring-helloworld-demo:war_exploded}/WEB-INF/lib/spring-webmvc-4.3.18.RELEASE.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.spring-helloworld-demo:war_exploded" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>